prototype(JvMTECH.MultiColumn:Prototype.Class.Break) < prototype(Neos.Fusion:Component) {
    show = Neos.Fusion:DataStructure {
        xs = ${Neos.Node.inBackend(node) || q(node).property('show-xs')}
        sm = ${Neos.Node.inBackend(node) || q(node).property('show-sm')}
        md = ${Neos.Node.inBackend(node) || q(node).property('show-md')}
        lg = ${Neos.Node.inBackend(node) || q(node).property('show-lg')}
        xl = ${Neos.Node.inBackend(node) || q(node).property('show-xl')}
    }

    renderer = Neos.Fusion:Case {
        bootstrap {
            condition = ${Configuration.setting('JvMTECH.MultiColumn.framework') == 'bootstrap'}
            renderer = JvMTECH.MultiColumn:Prototype.Class.Break.Bootstrap {
                @apply.props = ${props}
            }
        }
        tailwindcss {
            condition = ${true}
            renderer = JvMTECH.MultiColumn:Prototype.Class.Break.Tailwind {
                @apply.props = ${props}
            }
        }
    }
}
